{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "rootDir": "src",
        "outDir": "dist",
        "declaration": true,
        "allowJs": false,
        "sourceMap": true,
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "module": "commonjs",
        "target": "es2015",
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "*": ["src/*"]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}